<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n
            </Pattern>
        </layout>
    </appender>
	<!--按天生成日志-->
    <appender name="logFile"  class="ch.qos.logback.core.rolling.RollingFileAppender">
          <file>weixin-robot.log</file>
		  <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			 <fileNamePattern>weixin-robot.%d{yyyy-MM-dd}.log</fileNamePattern>
		  </rollingPolicy>
          <layout class="ch.qos.logback.classic.PatternLayout">
               <Pattern>
                <pattern>%d{HH:mm:ss} [%thread] %-5level %logger{36} [%method] [%line] - %msg%n</pattern>
               </Pattern>
          </layout>
    </appender>
    <logger name="io.github.biezhi.wechat" level="debug" additivity="false">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="logFile" />
    </logger>

    <root level="INFO">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="logFile" />
    </root>

</configuration>